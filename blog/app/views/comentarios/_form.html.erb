<%= form_for( [@post, @comentario]) do | f | %>

    <p class="form-group">
        <%= f.label :Comentário %><br/>
        <%= f.text_area :comentario, placeholder: "Escreve seu comentário...",  class:"form-control" %>
    </p>

   <p class="form-group">
        <%= f.label :Estrelas %><br/>
          <%= f.select :avaliacao, Comentario::AVALIACAO, prompt: 'Escolha a quantidade de estrelas', class:"form-control" %>
    </p>

    <p class="form-group">
        <%= f.label :Nome %><br/>
        <%= f.text_field :nome, autofocus: true, class:"form-control"%>
   </p>

    <p>
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to 'Cancelar', posts_path, class: 'btn btn-default' %>
    </p>

<% end %>