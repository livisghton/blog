<div class="container">
    <div class="jumbotron">
        <p id="notice"><%= notice %></p>

        <%= image_tag @post.image.url( :thumb) %>

        <p>
            <h2><%= @post.titulo %></h2>
          <h5><%= @post.data %></h5>
        </p>

        <p>
          <%= @post.conteudo %>
        </p>

        <%= link_to 'Comentar', new_post_comentario_path(@post), class: 'btn btn-primary' %>
        <%= link_to pluralize(@post.comentarios.size, 'Comentário', 'Comentários'), post_comentarios_path(@post) %>

    </div>


    <%= link_to posts_path, class: 'btn btn-link' do %>
        <i class="glyphicon glyphicon-home"> Post</i>
    <% end %>

    <%= link_to edit_post_path(@post), class: 'btn btn-link' do  %>
        <i class="glyphicon glyphicon-edit"> Editar</i>
    <% end %>

    <%= link_to post_path(@post), method: :delete, data:{ confirm: "Deseja realmente deletar este post?"}, class: 'btn btn-link' do  %>
        <i class="glyphicon glyphicon-remove-sign"> Deletar</i>
    <% end %>

</div>